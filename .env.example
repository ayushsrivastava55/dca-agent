# DCA Sitter Agent Configuration

# ===================
# ENVIRONMENT
# ===================
NODE_ENV=development

# ===================
# MARKET DATA API (REQUIRED)
# ===================
# Real market data API endpoint (CoinGecko, CoinMarketCap, etc.)
MARKET_DATA_API_URL=https://api.coingecko.com/api/v3/simple/price
MARKET_DATA_API_KEY=your_api_key_here

# ===================
# RISK MANAGEMENT THRESHOLDS
# ===================
# Conservative profile
CONSERVATIVE_MAX_RISK=0.4
CONSERVATIVE_WARNING_THRESHOLD=0.3

# Moderate profile
MODERATE_MAX_RISK=0.6
MODERATE_WARNING_THRESHOLD=0.5

# Aggressive profile
AGGRESSIVE_MAX_RISK=0.8
AGGRESSIVE_WARNING_THRESHOLD=0.7

# ===================
# POSITION SIZING
# ===================
MAX_SINGLE_LEG_PERCENT=25
MIN_LEGS=4
MAX_LEGS=20

# ===================
# SESSION MANAGEMENT
# ===================
SESSION_TIMEOUT_MS=86400000
SESSION_CLEANUP_INTERVAL_MS=3600000
MAX_SESSION_SNAPSHOTS=50

# ===================
# EVENT SYSTEM
# ===================
EVENT_HISTORY_SIZE=1000
EVENT_CLEANUP_INTERVAL_MS=300000

# ===================
# METRICS COLLECTION
# ===================
METRICS_COLLECTION_INTERVAL_MS=60000
METRICS_HISTORY_SIZE=1000
ENABLE_SYSTEM_METRICS=true

# ===================
# TESTING CONFIGURATION
# ===================
TEST_TIMEOUT_MS=30000
# Real testnet token addresses for testing
TEST_TOKEN_IN=0xA0b86a33E6441e42dF319e01bBC6F41EB76dF919
TEST_TOKEN_OUT=0x4200000000000000000000000000000000000006

# ===================
# API CONFIGURATION
# ===================
API_TIMEOUT_MS=30000
API_RETRIES=3
API_RATE_LIMIT_WINDOW_MS=60000

# ===================
# BLOCKCHAIN CONFIGURATION
# ===================
# Your existing environment variables
NEXT_PUBLIC_DCA_ROUTER_ADDRESS=0x9dA65B3413b6031E05F1E1eB58F8312084890e56
NEXT_PUBLIC_DTK_DELEGATION_MANAGER=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_DTK_ALLOWED_TARGETS_ENFORCER=0x1234567890123456789012345678901234567890

# ===================
# AI AGENT MODEL
# ===================
ADK_MODEL=gemini-2.5-flash

